rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photo uploads - only user can upload to their own folder
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
    }
    
    // Medicine verification photo uploads - only user can upload to their own folder
    match /verifications/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB limit for verification photos
        && request.resource.contentType.matches('image/.*');
    }
  }
}
