{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase/**.local",
      "**/node_modules/**",
      "**/.git/**",
      "**/.next/**"
    ],
    "frameworks": {
      "source": ".",
      "preview": {
        "command": "npm run build"
      },
      "buildOutput": ".next"
    }
  },
  "storage": {
    "rules": "firebase/storage.rules"
  }
}
